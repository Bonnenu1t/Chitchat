<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerVertical="true"
        android:src="@drawable/gril_photo_one"
        android:layout_marginTop="10dp"
        android:id="@+id/right_image_head"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/right_image_voice"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/height10"
        android:layout_toRightOf="@id/right_image_head"
       android:src="@mipmap/receive_voice_icon_3"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />
</RelativeLayout>