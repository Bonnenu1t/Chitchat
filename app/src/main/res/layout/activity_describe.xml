<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.chitchat.activitys.DescribeActivity">
    <include layout="@layout/select_shou_ye"/>
    <EditText
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请用一句话描述一下自己"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="2"
        android:theme="@style/MyEditText"
        android:id="@+id/describle_me"/>

    <Button
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/save"
        android:textColor="@color/write"
        android:background="@drawable/radio_sure02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/describle_save"/>

</LinearLayout>
